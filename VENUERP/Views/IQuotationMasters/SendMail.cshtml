@model List<SelectListItem>
@{
    ViewBag.Title = "Quotation";
}
 


<div class="row">
    <div class="col-md-10">
        <iframe src="@Url.Action("Pdf")" height="500" width="100%"></iframe>
    </div>
    <div class="col-md-2">
        @using (Html.BeginForm("SendMail", "IQuotationMasters", FormMethod.Post))
        {
            <table>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.CheckBoxFor(m => m[i].Selected)
                        </td>
                        <td>
                            @Html.DisplayFor(m => m[i].Text)
                            @Html.HiddenFor(m => m[i].Value)
                            @Html.HiddenFor(m => m[i].Text)
                        </td>
                    </tr>
                }
            </table>
            <br />
            <input type="submit" value="SEND MAIL" class="btn-success" />
        }
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }
        
        @*<button type="button" class="btn btn-primary">GROUP MAIL</button>
        <br/>
        <button type="button" class="btn btn-primary">SINGLE MAIL</button>*@

    </div>
</div>

